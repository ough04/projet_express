<head>
  <link rel="stylesheet" href="/styles/project-edit.css">
</head>
<body>
<form action="/api/projects/<%= project.id %>?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT" />
  <label>Title:</label>
  <input 
    type="text" 
    name="title" 
    value="<%= project.title %>" 
    required 
  />
  <label>Description:</label>
  <textarea name="description"><%= project.description %></textarea>
  <button type="submit">Save Changes</button>
</form>
</body>